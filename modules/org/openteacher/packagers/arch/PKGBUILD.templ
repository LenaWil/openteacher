# Maintainer: @!authors!@ <@!email!@>
pkgname="@!name.lower()!@"
pkgver=@!version!@
pkgrel=@!package_release!@
pkgdesc="@!short_description!@"
arch=('any')
url="@!website!@"
license=('GPL')
depends=('python2' 'python2-qt' 'phonon' 'python-opengl' 'python2-cherrypy' 'gettext' 'espeak' 'desktop-file-utils' 'hicolor-icon-theme' 'xdg-utils')

build() {
  cd "$startdir"

  #fix the shebang
  sed -i 's,^#<!--(raw)-->!<!--(end)-->/usr/bin/env python,#<!--(raw)-->!<!--(end)-->/usr/bin/env python2,' bin/openteacher

  #install into pkgdir
  python2 setup.py install --root=$pkgdir/ || return 1
}

check() {
  cd "$startdir/openteacher"
  python2 openteacher.py -p testsuite
}

post_install() {
  update-desktop-database -q
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  xdg-icon-resource forceupdate --theme hicolor &> /dev/null
}

#same function
post_upgrade() {
	post_install
}
post_remove () {
	post_install
}
